// vi: ft=jsonc
{
  "$schema": "https://json.schemastore.org/swcrc",
  "jsc": {
    "baseUrl": "Sources/",
    "paths": {
      "@codify/*": ["./*"],
      "@commands/*": ["Commands/*"],
      "@jobs/*": ["Jobs/*"]
    },
    "parser": {
      "syntax": "typescript",
      "decorators": true,
      "dynamicImport": true
    },
    "transform": {
      "legacyDecorator": true,
      "decoratorMetadata": true,
      "optimizer": {
        "simplify": true
      }
    },
    "target": "es2021"
  },
  "module": {
    "type": "commonjs",
    "strict": true,
    "strictMode": true,
    "lazy": false,
    "noInterop": true
  },
  "sourceMaps": "inline"
}
